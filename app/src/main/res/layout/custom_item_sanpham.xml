<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_height="@dimen/_200sdp"
    android:layout_width="@dimen/_150sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_10sdp"
    android:layout_margin="@dimen/_5sdp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/linearItemSanPham"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_item_sanpham"
            android:scaleType="centerInside"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_140sdp" />
        <TextView
            android:layout_gravity="center"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/_10sdp"
            android:id="@+id/txt_tenSanPham"
            android:text="Oppo"
            android:layout_margin="@dimen/_2sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="center"
            android:id="@+id/txt_giaSanPham"
            android:text="Oppo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_gravity="center"
            android:id="@+id/txt_giamGiaSp"
            android:text="Oppo"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</android.support.v7.widget.CardView>
