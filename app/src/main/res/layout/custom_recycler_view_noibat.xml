<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<ImageView-->
        <!--android:src="@drawable/bannner"-->
        <!--android:background="@color/colorWhite"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/_80sdp" >-->
    <!--</ImageView>-->
    <LinearLayout
        android:background="@drawable/bannner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </LinearLayout>

    <TextView
        android:text="Các thương hiệu lớn"
        android:textAlignment="center"
        android:layout_margin="@dimen/_10sdp"
        android:textSize="@dimen/_15sdp"
        android:background="@android:color/holo_red_light"
        android:textColor="@android:color/white"
        android:padding="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </TextView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerNoiBatThuongHieu"
        android:layout_margin="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

    <TextView
        android:text="Sản phẩm được mua nhiều nhất"
        android:textAlignment="center"
        android:background="@android:color/holo_red_light"
        android:layout_margin="@dimen/_10sdp"
        android:textSize="@dimen/_15sdp"
        android:textColor="@android:color/white"
        android:padding="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </TextView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerNoiBatSanPham"
        android:layout_margin="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>